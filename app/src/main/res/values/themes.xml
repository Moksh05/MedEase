<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MedEase" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <style name="Theme.MedEase" parent="Base.Theme.MedEase">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary_blue</item>
        <item name="colorAccent">@color/colorPrimary_blue</item>
        <item name="colorSecondaryContainer">@color/colorsecondary_blue</item>
    </style>
    



    <style name="CustomRadioButton" parent="Base.Theme.MedEase">
        <!-- Customize the appearance of the RadioButton -->
        <item name="android:button">@drawable/custom_radiobutton</item>
        <item name="android:background">@drawable/custom_radiobutton</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@color/black</item>
        <!-- Add more attributes as needed for customization -->
    </style>
</resources>