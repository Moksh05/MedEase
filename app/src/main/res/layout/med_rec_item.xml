<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/medrecitem_layout"
    android:layout_width="match_parent"
    android:elevation="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/medrec_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Tittle"></TextView>

        <TextView
            android:id="@+id/medrec_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="18dp"
            android:ellipsize="end"
            android:textColor="#615F5F"
            android:text="description \n herete \ till 3 lines \nfdhdghg \n fhidf">
        </TextView>

       <androidx.appcompat.widget.LinearLayoutCompat
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_vertical"
           android:orientation="horizontal">
           <ImageView
               android:layout_width="16dp"
               android:layout_height="16dp"
               android:src="@drawable/attachlogo"
               app:tint="#979292"></ImageView>

           <TextView
               android:id="@+id/medrec_uploadedfilename"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="16dp"
               android:textColor="#99098EF8"
               android:maxLines="1"
               android:text="Tittle"></TextView>
       </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/medrec_dateuploaded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#878787"
            android:text="Tittle"></TextView>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>