<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".addmedicinetime">


    <RelativeLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">


        <ImageView
            android:id="@+id/back_button_medication"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/back_background"
            android:scaleType="fitCenter"
            android:src="@drawable/back_arrow"
            app:tint="#9B9B9B">

        </ImageView>

        <TextView
            android:layout_width="366dp"
            android:layout_height="49dp"
            android:layout_below="@+id/back_button_medication"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:text="Add Medicine"
            android:textSize="30dp"
            android:textStyle="bold"></TextView>


    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_below="@id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/Medtime_layout1"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="5">

            <EditText
                android:id="@+id/medtime_edittext1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textAlignment="center"
                android:inputType="time"
                android:layout_weight="4"
                android:padding="15dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back_background"
                android:drawableLeft="@drawable/icon_medication"
                android:drawableTint="#9B9B9B"
                android:hint="Time"></EditText>

            <ImageButton
                android:id="@+id/medtime_selector1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_add"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                app:tint="@color/colorPrimary_blue"
                android:background="@drawable/blue_light_background"></ImageButton>






        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/Medtime_layout3"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_width="match_parent"
