                android:layout_weight="4"
                android:padding="15dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back_background"
                android:drawableLeft="@drawable/icon_medication"
                android:drawableTint="#9B9B9B"
                android:hint="Time"></EditText>

            <ImageButton
                android:id="@+id/medtime_selector3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_add"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                app:tint="@color/colorPrimary_blue"
                android:background="@drawable/blue_light_background"></ImageButton>






        </androidx.appcompat.widget.LinearLayoutCompat>
